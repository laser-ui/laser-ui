{
  "name": "admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/admin",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/admin",
        "main": "libs/admin/index.ts",
        "tsConfig": "libs/admin/tsconfig.lib.json",
        "assets": ["libs/admin/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs admin {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/admin/**/*.{ts,tsx,md}", "libs/admin/package.json"]
      }
    }
  },
  "tags": []
}
